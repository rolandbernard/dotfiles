
# Fonts
font-family = IBM Plex Mono
font-size = 10

# Theming
theme = simpledark
shell-integration-features = no-cursor
cursor-style-blink = false

# Window decorations
window-padding-x = 10
window-padding-y = 10
gtk-titlebar = false
window-width = 80
window-height = 40

# Other
clipboard-read = allow
clipboard-write = allow
linux-cgroup = always

# Keyboard shortcuts
keybind = shift+alt+c=copy_to_clipboard
keybind = shift+alt+v=paste_from_clipboard
keybind = shift+alt+a=select_all
keybind = ctrl+minus=decrease_font_size:1
keybind = ctrl+shift+minus=increase_font_size:1
keybind = alt+minus=new_split:down
keybind = shift+alt+minus=new_split:up
keybind = alt+plus=new_split:right
keybind = shift+alt+plus=new_split:left
keybind = alt+up=goto_split:up
keybind = alt+down=goto_split:down
keybind = alt+left=goto_split:left
keybind = alt+right=goto_split:right
keybind = shift+alt+up=resize_split:up,20
keybind = shift+alt+down=resize_split:down,20
keybind = shift+alt+left=resize_split:left,20
keybind = shift+alt+right=resize_split:right,20

